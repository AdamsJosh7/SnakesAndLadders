import java.util.*;

public class SnakesAndLadders {
	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		int board[] = new int[100];import java.util.*;
import java.util.Random;

public class SnakesAndLadders {
	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		int board[] = new int[100];
		System.out.println("Input number of players(2-4): ");
		int players = input.nextInt();
		while (players != 2 && players != 3 && players != 4) {
			System.out.print("Please input a valid player amount(2-4):");
			players = input.nextInt();
		}
		
		if (players == 2) {
			players2(board);
		}
		else if (players == 3) {
			players3(board);
		}
		else if (players == 4) {
			players4(board);
		}
		else {
			System.out.print("Please input a valid player amount(2-4):");
		}
	}
	public static void players2 (int[] board) {
		int playerturn = 1;
		int player1space = 0;
		int player2space = 0;
		System.out.println("2 Player Game Selected");
		Scanner input = new Scanner(System.in);
		Random random = new Random();
		while (player1space < 100 && player2space < 100) {
			System.out.println("Player " + playerturn + "'s turn, please type 'roll' to roll the dice: ");
			String roll = input.nextLine();
			if (roll.equalsIgnoreCase("roll") && playerturn == 1) {
				System.out.println("Rolling");
				int dice = random.nextInt(6) + 1;
				player1space = player1space + dice;
				System.out.println("You rolled a: " + dice + "! you are now on space: " + player1space);
				if (player1space == 32) {
					player1space = 10;
					System.out.println("Oops! you were attacked by a snake! your new space is: " + player1space);
				}
				if (player1space == 34) {
					player1space = 6;
					System.out.println("Oops! you were attacked by a snake! your new space is: " + player1space);
				}
				if (player1space == 48) {
					player1space = 26;
					System.out.println("Oops! you were attacked by a snake! your new space is: " + player1space);
				}
				if (player1space == 62) {
					player1space = 18;
					System.out.println("Oops! you were attacked by a snake! your new space is: " + player1space);
				}
				if (player1space == 88) {
					player1space = 24;
					System.out.println("Oops! you were attacked by a snake! your new space is: " + player1space);
				}
				if (player1space == 95) {
					player1space = 56;
					System.out.println("Oops! you were attacked by a snake! your new space is: " + player1space);
				}
				if (player1space == 97) {
					player1space = 78;
					System.out.println("Oops! you were attacked by a snake! your new space is: " + player1space);
				}
				if (player1space == 1) {
					player1space = 38;
					System.out.println("You found a ladder! your new space is: " + player1space);
				}
				if (player1space == 4) {
					player1space = 14;
					System.out.println("You found a ladder! your new space is: " + player1space);
				}
				if (player1space == 8) {
					player1space = 30;
					System.out.println("You found a ladder! your new space is: " + player1space);
				}
				if (player1space == 28) {
					player1space = 76;
					System.out.println("You found a ladder! your new space is: " + player1space);
				}
				if (player1space == 21) {
					player1space = 42;
					System.out.println("You found a ladder! your new space is: " + player1space);
				}
				if (player1space == 50) {
					player1space = 67;
					System.out.println("You found a ladder! your new space is: " + player1space);
				}
				if (player1space == 71) {
					player1space = 92;
					System.out.println("You found a ladder! your new space is: " + player1space);
				}
				if (player1space == 88) {
					player1space = 99;
					System.out.println("You found a ladder! your new space is: " + player1space);
				}
				if (player1space > 100) {
					player1space = player1space - dice;
					System.out.print("You went too high! Back to space: " + player1space);
				}
				playerturn = 2;
			}
			if (roll.equalsIgnoreCase("roll") && playerturn == 2) {
				System.out.println("Rolling");
				int dice = random.nextInt(5) + 1;
				player1space = player1space + dice;
				System.out.println("You rolled a: " + dice + "! you are now on space: " + player2space);
				if (player2space == 32) {
					player2space = 10;
					System.out.println("Oops! you were attacked by a snake! your new space is: " + player2space);
				}
				if (player2space == 34) {
					player2space = 6;
					System.out.println("Oops! you were attacked by a snake! your new space is: " + player2space);
				}
				if (player2space == 48) {
					player2space = 26;
					System.out.println("Oops! you were attacked by a snake! your new space is: " + player2space);
				}
				if (player2space == 62) {
					player2space = 18;
					System.out.println("Oops! you were attacked by a snake! your new space is: " + player2space);
				}
				if (player2space == 88) {
					player2space = 24;
					System.out.println("Oops! you were attacked by a snake! your new space is: " + player2space);
				}
				if (player2space == 95) {
					player2space = 56;
					System.out.println("Oops! you were attacked by a snake! your new space is: " + player2space);
				}
				if (player2space == 97) {
					player2space = 78;
					System.out.println("Oops! you were attacked by a snake! your new space is: " + player2space);
				}
				if (player2space == 1) {
					player2space = 38;
					System.out.println("You found a ladder! your new space is: " + player2space);
				}
				if (player2space == 4) {
					player2space = 14;
					System.out.println("You found a ladder! your new space is: " + player2space);
				}
				if (player2space == 8) {
					player2space = 30;
					System.out.println("You found a ladder! your new space is: " + player2space);
				}
				if (player2space == 28) {
					player2space = 76;
					System.out.println("You found a ladder! your new space is: " + player2space);
				}
				if (player2space == 21) {
					player2space = 42;
					System.out.println("You found a ladder! your new space is: " + player2space);
				}
				if (player2space == 50) {
					player2space = 67;
					System.out.println("You found a ladder! your new space is: " + player2space);
				}
				if (player2space == 71) {
					player2space = 92;
					System.out.println("You found a ladder! your new space is: " + player2space);
				}
				if (player1space == 88) {
					player1space = 99;
					System.out.println("You found a ladder! your new space is: " + player1space);
				}
				if (player1space > 100) {
					player1space = player1space - dice;
					System.out.print("You went too high! Back to space: " + player1space);
				}
				playerturn = 1;
			}
		}
	
	}
